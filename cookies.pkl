from selenium import webdriver
from selenium.webdriver.chrome.options import Options
import time
import pickle

# Skonfiguruj Chrome
options = Options()
options.add_argument("--start-maximized")

# Uruchom przeglądarkę
driver = webdriver.Chrome(options=options)

# Przejdź do strony logowania Linkvertise
driver.get("https://publisher.linkvertise.com/login")

print("🔐 Zaloguj się ręcznie, masz 60 sekund...")
time.sleep(60)  # czas na ręczne logowanie

# Po zalogowaniu – zapisz cookies
cookies = driver.get_cookies()

with open("cookies.pkl", "wb") as f:
    pickle.dump(cookies, f)

print("✅ Cookies zapisane jako cookies.pkl")

driver.quit()
